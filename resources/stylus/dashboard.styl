body
    background-color: rgb(0, 0, 0)

h1
    color: white
    font-family: 'Roboto', sans-serif
h2
    color: white
    margin-bottom: 20px
h3
    color: red

.card
    border-radius: 20px
    background: linear-gradient(45deg, #7a00ff, #ff00e0)
    padding: 20px
    margin: 20px
    box-shadow: 5px 5px 15px #ccc
    width: 450px
    height: 200px

.row
    display: flex
    flex-direction: row
    justify-content: space-between
    margin: 20px 0
    p
        color: white
        font-size: 50px
        margin 0
        font-family: 'Roboto', sans-serif
    img
        width: 90px
        height: 50px

.footer
    justify-content: space-between
    margin: 20px 0
    p
        color: white
        font-size: 20px
        margin 0 0 10px 0
        font-family: 'Roboto', sans-serif



.form
    width: 500px
    border: 1px solid #ccc
    padding: 20px
    
    .field
        display: inline-block
        margin-bottom: 10px
        //background-color: orange
    .field label
            display: block

