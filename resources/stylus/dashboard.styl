.item
    display: flex
    flex-direction: row
    padding: 10px
    width: 500px
    justify-content: space-between
    margin: 30px 10px
    border: 1px solid #ccc
    box-shadow: 5px 5px 15px #ccc
    p
        margin-right: 20px
        flex: 1
    .description
        flex: 2

.ingreso
    color: white
    background-color: rgba(0, 128, 0, 0.431)

.egreso
    color: white
    background-color: rgba(254, 4, 4, 0.435)

label
    color: white


.check
    display: inline-block

.checkboxs
    display: flex
    margin-top: 20px
    //margin-bottom: 10px
    button
        display: inline-block
        cursor: pointer
        width: 100px
    .selected
        color: white
    .ingreso
        background-color: green
    .egreso
        background-color: red


