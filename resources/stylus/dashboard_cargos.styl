.header
    background-color: rgb(255, 162, 0)
    width 100vw
    height: 150px
    justify-content: center
    align-items: center
    display: flex
    flex-direction: column
    p
        font-size: 30px
        margin 5px
        //another
        color: white
        font-family: 'Roboto', sans-serif

.subtitle
    font-size: 50px
    //bold
    font-weight: bold


.content
    display: flex
    flex-direction: column
    align-items: center
    .form
        display: flex
        flex-direction: column
        align-items: center
        width: 500px
        margin: 20px auto
        margin-bottom: 0
        .checkboxs
            width: 100%
            display: flex
            flex-direction: row
            justify-content: center
        .field
            width: 100%
            display: flex
            flex-direction: column
            align-items: center
        input
            margin-bottom: 5px
            padding: 5px
            width: 50%
            border-radius: 5px
            border: 1px solid #ccc
        input[type="textarea"]
            height: 50px 
        select
            margin: 5px
            padding: 5px
            width: 50%
            border-radius: 5px
            border: 1px solid #ccc
        button
            margin: 5px
            padding: 5px
            width: 25%
            border-radius: 5px
            border: 1px solid #ccc
            color: white
            //background-color: rgba(255, 166, 0, 0.306)
            font-family: 'Roboto', sans-serif
            font-size: 15px
            cursor: pointer

//responsive
@media (max-width: 768px)
    .header
        height: 200px
        p
            font-size: 20px
    .subtitle
        font-size: 30px
    .content
        .form
            width: 70%
            .field
                input
                    width: 100%
                select
                    width: 100%
                button
                    width: 100%

            
                

    